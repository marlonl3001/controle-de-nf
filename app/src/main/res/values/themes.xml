<resources>
    <!-- Base application theme. -->
    <style name="Theme.ControleDeNF" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryDark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="background">@color/fragmentBackground</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:padding">@dimen/margin16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font24</item>
    </style>

        <style name="SubtitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:padding">@dimen/margin16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font16</item>
    </style>

    <style name="Button.Rounded" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Icon" parent="Widget.Material3.Button.IconButton"/>

    <style name="Button.Outlined" parent="Button.Rounded">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="theme">@style/Widget.Material3.Button.OutlinedButton</item>
    </style>

    <style name="Text.Secondary" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="elevation">0.1dp</item>
        <item name="android:background">@color/black_alpha_40</item>
    </style>

    <style name="FilterTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:paddingVertical">@dimen/margin16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font18</item>
    </style>

    <style name="TextInputBase" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="CleanEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Social Login -->
    <style name="Button.Social.Base" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:insetBottom">@dimen/margin0</item>
        <item name="android:insetLeft">@dimen/margin0</item>
        <item name="android:insetRight">@dimen/margin0</item>
        <item name="android:insetTop">@dimen/margin0</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font16</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Facebook" parent="Button.Social.Base">
        <item name="android:textColor">@color/design_facebook_color</item>
        <item name="icon">@drawable/ic_facebook_button</item>
    </style>

    <style name="Button.Google" parent="Button.Social.Base">
        <item name="android:textColor">@color/design_google_color</item>
        <item name="icon">@drawable/ic_google_button</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="TextView.InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:paddingBottom">@dimen/margin8</item>
        <item name="android:paddingLeft">@dimen/margin4</item>
        <item name="android:paddingRight">@dimen/margin4</item>
    </style>

</resources>